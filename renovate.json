{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchPackageNames": ["@biomejs/biome"],
      "postUpgradeTasks": {
        "commands": [
          "npm exec --yes @biomejs/biome -- migrate --write",
          "sed -i '' 's|https://biomejs.dev/schemas/[0-9]\\+\\.[0-9]\\+\\.[0-9]\\+/schema.json|https://biomejs.dev/schemas/{{{newVersion}}}/schema.json|' biome.json"
        ],
        "fileFilters": ["biome.json"],
        "executionMode": "update"
      }
    }
  ]
}
