{
  "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useSemanticElements": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noImportantStyles": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noDescendingSpecificity": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noShorthandPropertyOverrides": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always"
    }
  },
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/release",
      "!**/*.min.js",
      "!**/coverage",
      "!**/playwright-report",
      "!**/test-results",
      "!app/renderer/features/diff/utils/**/*.test.ts",
      "!app/renderer/features/diff/themes/**/*.test.ts",
      "!app/renderer/features/diff/hooks/useCompactMode.test.ts",
      "!tests/e2e/fixtures"
    ]
  }
}
